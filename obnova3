--======================== –±–ª–æ–∫–∏—Ä–æ–≤–∫–∞ –∑–∞–ø—É—Å–∫–∞ =======================
local globalBusy = false
local allStartButtons = {}

local function setButtonsEnabled(enabled)
    for _, b in ipairs(allStartButtons) do
        b.Active = enabled
        b.AutoButtonColor = enabled
        b.BackgroundColor3 = enabled and Color3.fromRGB(130, 235, 155) or Color3.fromRGB(190, 190, 190)
    end
end

local function runCountdown(btn, onComplete)
    if globalBusy then return end
    globalBusy = true
    setButtonsEnabled(false)
    local orig = btn.Text
    for t = 10, 1, -1 do
        btn.Text = ("–ó–∞–ø—É—Å–∫... %d"):format(t)
        task.wait(1)
    end
    btn.Text = "–ó–∞–ø—É—Å–∫..."
    pcall(function() if typeof(onComplete) == "function" then onComplete() end end)
    notify("–í—ã–ø–æ–ª–Ω–µ–Ω–æ", "–û–ø–µ—Ä–∞—Ü–∏—è –∑–∞–≤–µ—Ä—à–µ–Ω–∞.")
    btn.Text = orig
    globalBusy = false
    setButtonsEnabled(true)
end

--========================== –ª–µ–π–∞—É—Ç ==========================
local function viewport()
    local cam = workspace.CurrentCamera
    return cam and cam.ViewportSize or Vector2.new(1280, 720)
end

local function computeMainFrameSize()
    local vp = viewport()
    local isPhone = UIS.TouchEnabled and vp.Y <= 900
    if isPhone then
        local h = math.clamp(52 + 22 + 20 + 56*2 + 50, 240, math.floor(vp.Y*0.48))
        local w = math.min(440, math.floor(vp.X*0.92))
        return UDim2.fromOffset(w, h), true
    else
        return UDim2.fromOffset(440, 540), false
    end
end

local function maxBodyHeight()
    local vp = viewport()
    return UIS.TouchEnabled and math.floor(vp.Y*0.45) or math.floor(vp.Y*0.33)
end

local function clampToScreen(frame, pos)
    local vp = viewport()
    return UDim2.new(
        0, math.clamp(pos.X, 0, math.max(0, vp.X - frame.Size.X.Offset)),
        0, math.clamp(pos.Y, 0, math.max(0, vp.Y - frame.Size.Y.Offset))
    )
end

--======================== —É–Ω–∏–≤–µ—Ä—Å–∞–ª—å–Ω—ã–π DRAG =======================
-- 1) —Ç—è–Ω–µ–º –∑–∞ –∫—Ä–∞—è
-- 2) long press 0.3s –≤ –ª—é–±–æ–º –º–µ—Å—Ç–µ
local function enableDrag(frame, edgeThickness)
    edgeThickness = edgeThickness or 14
    frame.Active = true
    frame.ClipsDescendants = false

    local function startDrag(input)
        local startPos = frame.AbsolutePosition
        local start = input.Position
        local ended = false
        local ch; ch = input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                ended = true
                if ch then ch:Disconnect() end
            end
        end)
        local function onMove(i)
            if ended then return end
            if i ~= input then return end
            local delta = i.Position - start
            frame.Position = clampToScreen(frame, startPos + delta)
        end
        local moveConn
        moveConn = UIS.InputChanged:Connect(function(i)
            if i == input then onMove(i) end
        end)
        task.spawn(function()
            repeat task.wait() until ended
            if moveConn then moveConn:Disconnect() end
        end)
    end

    -- —Ä–∞–º–∫–∏-–æ–±–ª–∞—Å—Ç–∏
    local edges = {}
    local function makeEdge(name, pos, size)
        local b = Instance.new("TextButton")
        b.Name = name
        b.Text = ""
        b.BackgroundTransparency = 1
        b.AutoButtonColor = false
        b.ZIndex = 1000
        b.Active = true
        b.Selectable = false
        b.Size = size
        b.Position = pos
        b.Parent = frame
        b.MouseButton1Down:Connect(function(x, y) startDrag({Position = Vector2.new(x,y), UserInputState = Enum.UserInputState.Begin}) end)
        b.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1
            or input.UserInputType == Enum.UserInputType.Touch then
                startDrag(input)
            end
        end)
        table.insert(edges, b)
    end

    local thick = edgeThickness
    makeEdge("TopEdge",    UDim2.new(0,0,0,0),               UDim2.new(1,0,0,thick))
    makeEdge("BottomEdge", UDim2.new(0,0,1,-thick),          UDim2.new(1,0,0,thick))
    makeEdge("LeftEdge",   UDim2.new(0,0,0,0),               UDim2.new(0,thick,1,0))
    makeEdge("RightEdge",  UDim2.new(1,-thick,0,0),          UDim2.new(0,thick,1,0))

    -- long press –ø–æ –ª—é–±–æ–π —Ç–æ—á–∫–µ –æ–∫–Ω–∞
    if UIS.TouchEnabled then
        frame.InputBegan:Connect(function(input)
            if input.UserInputType ~= Enum.UserInputType.Touch then return end
            local this = input
            task.delay(0.30, function()
                if this.UserInputState == Enum.UserInputState.Begin then
                    startDrag(this)
                end
            end)
        end)
    else
        -- –Ω–∞ –ü–ö –ø—Ä–æ—Å—Ç–æ –∑–∞–∂–º–∏ –õ–ö–ú –Ω–∞ 0.30—Å –∫—É–¥–∞ —É–≥–æ–¥–Ω–æ
        frame.InputBegan:Connect(function(input)
            if input.UserInputType ~= Enum.UserInputType.MouseButton1 then return end
            local this = input
            task.delay(0.30, function()
                if this.UserInputState == Enum.UserInputState.Begin then
                    startDrag(this)
                end
            end)
        end)
    end
end

--======================== –æ—Å–Ω–æ–≤–Ω–æ–π GUI ======================
local function createMainGui()
    local frame = Instance.new("Frame")
    frame.Name = "Container"
    local size, compactMobile = computeMainFrameSize()
    frame.Size = size
    frame.Position = UDim2.fromScale(0.5, 0.5)
    frame.AnchorPoint = Vector2.new(0.5, 0.5)
    frame.BackgroundColor3 = Color3.fromRGB(22, 22, 26)
    frame.BorderSizePixel = 0
    frame.Parent = sg
    Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 14)
    local stroke = Instance.new("UIStroke", frame); stroke.Thickness = 1; stroke.Color = Color3.fromRGB(60, 60, 70)

    -- –∑–∞–≥–æ–ª–æ–≤–æ–∫
    local titleBar = Instance.new("Frame")
