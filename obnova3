        statusLbl.Visible = true
        TweenService:Create(statusLbl, TweenInfo.new(0.25), { TextTransparency = 0 }):Play()
        task.spawn(function()
            task.wait(2)
            TweenService:Create(statusLbl, TweenInfo.new(0.4), { TextTransparency = 1 }):Play()
            task.wait(0.45)
            statusLbl.Visible = false
        end)
        if ok then notify("–°—Å—ã–ª–∫–∞ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞","–°—Å—ã–ª–∫–∞ –Ω–∞ TG —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞ –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞.")
        else notify("–ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç—Å—è","–°–∫–æ–ø–∏—Ä—É–π –≤—Ä—É—á–Ω—É—é: "..TG_LINK) end
        tryOpenBrowser(TG_LINK)
    end)

    local closeBtn = Instance.new("TextButton")
    closeBtn.Parent = frame
    closeBtn.Text = "X"
    closeBtn.Font = Enum.Font.GothamBold
    closeBtn.TextSize = 16
    closeBtn.TextColor3 = Color3.fromRGB(255, 80, 80)
    closeBtn.BackgroundTransparency = 1
    closeBtn.Size = UDim2.fromOffset(36, 36)
    closeBtn.Position = UDim2.new(1, -42, 0, 6)
    closeBtn.MouseButton1Click:Connect(function() sg:Destroy() end)

    enableDrag(frame, 14)
end

--============================= –∑–∞–ø—É—Å–∫ =============================
if useNormalGui then
    createMainGui()
else
    createSmallUpdateGui()
end
