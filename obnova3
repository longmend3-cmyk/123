    closeBtn.MouseButton1Click:Connect(function() sg:Destroy() end)

    -- —Å–ø–∏—Å–æ–∫ —Ä–µ–∂–∏–º–æ–≤
    local scroll = Instance.new("ScrollingFrame")
    scroll.Parent = frame
    scroll.Name = "Scroll"
    scroll.Position = UDim2.fromOffset(12, 78)
    scroll.Size = UDim2.new(1, -24, 1, -90)
    scroll.BackgroundTransparency = 1
    scroll.CanvasSize = UDim2.new(0, 0, 0, 0)
    scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
    scroll.ScrollBarThickness = compactMobile and 6 or 8
    scroll.ScrollBarImageColor3 = Color3.fromRGB(120, 120, 130)

    local contentList = Instance.new("UIListLayout")
    contentList.Parent = scroll
    contentList.SortOrder = Enum.SortOrder.LayoutOrder
    contentList.Padding = UDim.new(0, 14)

    local pad = Instance.new("UIPadding")
    pad.Parent = scroll
    pad.PaddingTop = UDim.new(0, 8)
    pad.PaddingBottom = UDim.new(0, 22)
    pad.PaddingLeft = UDim.new(0, 2)
    pad.PaddingRight = UDim.new(0, 2)

    -- –≤–∫–ª—é—á–∞–µ–º drag (–∫—Ä–∞—è + long-press)
    enableDrag(frame, 14)

    -- –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä —Å–µ–∫—Ü–∏–∏
    local GREEN = Color3.fromRGB(110, 215, 150)
    local function createSection(parent, sectionData)
        local section = Instance.new("Frame")
        section.Parent = parent
        section.BackgroundColor3 = Color3.fromRGB(28, 28, 33)
        section.Size = UDim2.new(1, 0, 0, 56)
        section.AutomaticSize = Enum.AutomaticSize.Y
        section.BorderSizePixel = 0
        Instance.new("UICorner", section).CornerRadius = UDim.new(0, 10)
        local sStroke = Instance.new("UIStroke", section); sStroke.Thickness = 1; sStroke.Color = GREEN

        local secPad = Instance.new("UIPadding")
        secPad.Parent = section
        secPad.PaddingTop = UDim.new(0, 4)
        secPad.PaddingBottom = UDim.new(0, 4)
        secPad.PaddingLeft = UDim.new(0, 4)
        secPad.PaddingRight = UDim.new(0, 4)

        local vlist = Instance.new("UIListLayout")
        vlist.Parent = section
        vlist.SortOrder = Enum.SortOrder.LayoutOrder
        vlist.Padding = UDim.new(0, 10)

        -- —à–∞–ø–∫–∞ —Å–µ–∫—Ü–∏–∏
        local header = Instance.new("TextButton")
        header.Parent = section
        header.Text = ""
        header.Size = UDim2.new(1, 0, 0, 44)
        header.BackgroundColor3 = Color3.fromRGB(34, 34, 40)
        header.AutoButtonColor = true
        Instance.new("UICorner", header).CornerRadius = UDim.new(0, 8)
        local hStroke = Instance.new("UIStroke", header); hStroke.Thickness = 1; hStroke.Color = Color3.fromRGB(60, 60, 70)

        local arrow = Instance.new("ImageLabel")
        arrow.Parent = header
        arrow.BackgroundTransparency = 1
        arrow.Image = "rbxassetid://6031090990"
        arrow.ImageColor3 = Color3.fromRGB(220, 220, 230)
        arrow.Size = UDim2.fromOffset(18, 18)
        arrow.Position = UDim2.fromOffset(12, 13)

        local modeLabel = Instance.new("TextLabel")
        modeLabel.Parent = header
        modeLabel.BackgroundTransparency = 1
        modeLabel.Text = sectionData.mode
        modeLabel.Font = Enum.Font.GothamBold
        modeLabel.TextSize = 16
        modeLabel.TextColor3 = Color3.fromRGB(235, 235, 245)
        modeLabel.Size = UDim2.new(1, -48, 1, 0)
        modeLabel.Position = UDim2.fromOffset(38, 0)
        modeLabel.TextXAlignment = Enum.TextXAlignment.Left

        -- —Ç–µ–ª–æ (–≤–Ω—É—Ç—Ä–µ–Ω–Ω–∏–π —Å–∫—Ä–æ–ª–ª —Å –∞–≤—Ç–æ-–≤—ã—Å–æ—Ç–æ–π)
        local bodyHolder = Instance.new("Frame")
        bodyHolder.Parent = section
        bodyHolder.BackgroundTransparency = 1
        bodyHolder.Size = UDim2.new(1, 0, 0, 0)
        bodyHolder.AutomaticSize = Enum.AutomaticSize.Y

        local body = Instance.new("ScrollingFrame")
        body.Parent = bodyHolder
        body.Visible = false
        body.BackgroundTransparency = 1
        body.Size = UDim2.new(1, 0, 0, 0)
        body.AutomaticCanvasSize = Enum.AutomaticSize.None
        body.ScrollBarThickness = UIS.TouchEnabled and 6 or 7
        body.ScrollBarImageColor3 = Color3.fromRGB(120, 120, 130)

        local bodyPad = Instance.new("UIPadding")
        bodyPad.Parent = body
        bodyPad.PaddingLeft = UDim.new(0, 2)
        bodyPad.PaddingRight = UDim.new(0, 2)
        bodyPad.PaddingBottom = UDim.new(0, 6)

        local bodyList = Instance.new("UIListLayout")
        bodyList.Parent = body
        bodyList.SortOrder = Enum.SortOrder.LayoutOrder
        bodyList.Padding = UDim.new(0, 10)

        local function fitBody()
            local content = bodyList.AbsoluteContentSize.Y + 6
            local target = math.min(content, maxBodyHeight())
            body.Size = UDim2.new(1, 0, 0, target)
            body.CanvasSize = UDim2.new(0, 0, 0, content)
        end
        bodyList:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(fitBody)

        for _, scr in ipairs(sectionData.scripts or {}) do
            local row = Instance.new("Frame")
            row.Parent = body
            row.Size = UDim2.new(1, 0, 0, 78)
            row.AutomaticSize = Enum.AutomaticSize.Y
            row.BackgroundColor3 = Color3.fromRGB(32, 32, 38)
            row.BorderSizePixel = 0
            Instance.new("UICorner", row).CornerRadius = UDim.new(0, 8)

            local innerList = Instance.new("UIListLayout")
            innerList.Parent = row
            innerList.Padding = UDim.new(0, 8)

            local top = Instance.new("Frame")
            top.Parent = row
            top.BackgroundTransparency = 1
            top.Size = UDim2.new(1, -14, 0, 24)
            top.Position = UDim2.fromOffset(7, 8)

            local nameLbl = Instance.new("TextLabel")
            nameLbl.Parent = top
            nameLbl.Text = scr.name or "Script"
            nameLbl.Font = Enum.Font.GothamBlack
            nameLbl.TextSize = 16
            nameLbl.TextColor3 = Color3.fromRGB(255, 255, 255)
            nameLbl.BackgroundTransparency = 1
            nameLbl.Size = UDim2.new(1, -120, 1, 0)
            nameLbl.TextXAlignment = Enum.TextXAlignment.Left

            local badge = Instance.new("TextLabel")
            badge.Parent = top
            badge.Text = " "..(scr.badge or "")
            badge.Font = Enum.Font.GothamBold
            badge.TextSize = 14
            badge.TextColor3 = Color3.fromRGB(255, 180, 90)
            badge.BackgroundTransparency = 1
            badge.AnchorPoint = Vector2.new(1, 0)
            badge.Position = UDim2.new(1, 0, 0, 0)
            badge.Size = UDim2.fromOffset(110, 24)
            badge.TextXAlignment = Enum.TextXAlignment.Right

            local startBtn = Instance.new("TextButton")
            startBtn.Parent = row
            startBtn.Text = "–ó–∞–ø—É—Å—Ç–∏—Ç—å"
            startBtn.Font = Enum.Font.GothamBold
            startBtn.TextSize = 16
            startBtn.AutoButtonColor = true
            startBtn.TextColor3 = Color3.fromRGB(20, 20, 22)
            startBtn.BackgroundColor3 = Color3.fromRGB(130, 235, 155)
            startBtn.Size = UDim2.new(1, -14, 0, 42)
            startBtn.Position = UDim2.fromOffset(7, 0)
            Instance.new("UICorner", startBtn).CornerRadius = UDim.new(0, 10)
            local gradient = Instance.new("UIGradient", startBtn)
            gradient.Color = ColorSequence.new{
                ColorSequenceKeypoint.new(0, Color3.fromRGB(130, 235, 155)),
                ColorSequenceKeypoint.new(1, Color3.fromRGB(100, 200, 120))
            }
            gradient.Rotation = 90

            table.insert(allStartButtons, startBtn)
            startBtn.MouseButton1Click:Connect(function()
                runCountdown(startBtn, function()
                    pcall(function() scr.run() end)
                    notify(scr.name, "Script executed successfully.")
                end)
            end)
        end

        local opened = false
        local function toggle()
            opened = not opened
            body.Visible = opened
            if opened then fitBody() else body.Size = UDim2.new(1,0,0,0) end
            TweenService:Create(arrow, TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
                { Rotation = opened and 90 or 0 }):Play()
        end
        header.MouseButton1Click:Connect(toggle)
    end

    for _, sec in ipairs(HUB_DATA) do
        createSection(scroll, sec)
    end
end

