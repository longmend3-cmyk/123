--========================= –±–µ–∑–æ–ø–∞—Å–Ω—ã–π —Ä–æ–¥–∏—Ç–µ–ª—å =========================
local function getSafeGuiParent()
    local ok, ui = pcall(function()
        if gethui then return gethui() end
        return game:GetService("CoreGui")
    end)
    if ok and ui then return ui end
    return game.Players.LocalPlayer:WaitForChild("PlayerGui")
end

local function protect(g)
    pcall(function()
        if syn and syn.protect_gui then syn.protect_gui(g) end
        if gethui and not g.Parent then g.Parent = gethui() end
    end)
end

local parent = getSafeGuiParent()
local sg = Instance.new("ScreenGui")
sg.Name = "VVW_Loader_UI"
sg.ResetOnSpawn = false
sg.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
protect(sg)
sg.Parent = parent

--============================== —É—Ç–∏–ª—ã ==============================
local TweenService = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")

local function notify(title, text, dur)
    pcall(function()
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = title or "Info",
            Text  = text or "",
            Duration = dur or 4
        })
    end)
end

local function copyToClipboard(text)
    local ok
    pcall(function()
        if setclipboard then setclipboard(text); ok = true end
        if syn and syn.set_clipboard then syn.set_clipboard(text); ok = true end
    end)
    return ok
end

local function tryOpenBrowser(url)
    pcall(function()
        if _G.openBrowser then _G.openBrowser(url) end
        if openbrowser then openbrowser(url) end
        if browser_open then browser_open(url) end
        if syn and syn.request then syn.request({ Url = url, Method = "GET" }) end
    end)
end

